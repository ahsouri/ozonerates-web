---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
const pageTitle: string = `Maps | ${SITE.title}`;
import { twMerge } from 'tailwind-merge';
import MapComponent from "@/components/sections/misc/MapComponent";
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.ozonerates.space/maps",
    "url": "https://www.ozonerates.space/maps",
    "name": "Maps",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://www.ozonerates.space",
      "name": "Ozonerates",
     },
    "inLanguage": "en-US"}}
  showFooter={false}
>
<div class={twMerge("bg-gradient-to-r from-purple-500 to-indigo-600 text-white p-6 rounded-2xl shadow-lg text-center max-w-3xl mx-auto my-10")}>
  <h2 class="text-lg font-bold mb-2">Explore Bias-Corrected TROPOMI-Based Products</h2>
  <p class="text-m">
    Discover high-resolution datasets, including PO3, ozone sensitivity maps, photolysis rates, and the abundance of HCHO and NOâ‚‚, spanning from 2018 to 2023 at ~10x10 km2.
  </p>
</div>
<MapComponent client:load />
<div class="my-8"></div>

<style>
  .spacer {
    height: 2rem; /* Adjust as needed */
  }
</style>

<div class="spacer"></div> <!-- Blank space -->
</MainLayout>
