---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.ozonerates.space/contact",
    "url": "https://www.ozonerates.space/contact",
    "name": "Contact Us",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://www.ozonerates.space",
      "name": "Ozonerates",
     },
    "inLanguage": "en-US"
  }}>
<ContactSection />
</MainLayout>
